%define _bindir /usr/bin

# Trying to build the debuginfo package on CentOS 6 causes problems.
%if 0%{?rhel} == 6
%define debug_package %{nil}
%endif

Name:		bruce
Version:	BRUCE_VERSION
Release:	1%{?dist}
Summary:	producer daemon for Apache Kafka

Group:		System Environment/Daemons
License:	ASL 2.0
#URL:		
Source0:	%{name}-%{version}.tar.gz

#BuildRequires:	
#Requires:	

%description
Bruce is a producer daemon for Apache Kafka.


%prep
%setup -q


%build
%if 0%{?rhel} == 6
    # For CentOS 6, we must build using gcc 4.8.2 and Python 2.7.
    IMPORT_PATH=--import_path
    mkdir out
    virtualenv-2.7 --distribute out/python_2_7_env
    source out/python_2_7_env/bin/activate
    export PATH=/opt/gcc/bin:$PATH
    export LD_LIBRARY_PATH=/opt/gcc/lib64
%else
    IMPORT_PATH=
%endif

./build_all -m release -f bruce/bruce $IMPORT_PATH apps
./build_all -m release -f bruce/simple_client/simple_bruce_client $IMPORT_PATH apps
./build_all -m release -f bruce_client/libbruce_client.a $IMPORT_PATH client_libs
./build_all -m release -f bruce_client/libbruce_client.so $IMPORT_PATH client_libs


%install
mkdir -p %{buildroot}/%{_bindir}
cp out/release/bruce/bruce %{buildroot}/%{_bindir}
cp out/release/bruce/simple_client/simple_bruce_client %{buildroot}/%{_bindir}
mkdir -p %{buildroot}/%{_libdir}
cp out/release/bruce_client/libbruce_client.a %{buildroot}/%{_libdir}
cp out/release/bruce_client/libbruce_client.so %{buildroot}/%{_libdir}/libbruce_client.so.0
mkdir -p %{buildroot}/%{_includedir}/bruce_client
cp src/bruce_client/bruce_client.h %{buildroot}/%{_includedir}/bruce_client


%post
/sbin/ldconfig


%postun
/sbin/ldconfig


%files
%defattr(-,root,root)
%{_bindir}/bruce
%{_bindir}/simple_bruce_client
%{_libdir}/libbruce_client.a
%{_libdir}/libbruce_client.so.0
%{_includedir}/bruce_client/bruce_client.h


%changelog

